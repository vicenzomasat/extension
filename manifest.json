{
  "manifest_version": 3,
  "name": "Privacy Shield - Fingerprint Blocker",
  "version": "1.1.1",
  "description": "Oculta el fingerprint del navegador manteniendo la compatibilidad con sitios seguros",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "privacy"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Privacy Shield",
    "default_icon": {
      "16": "icons/logo/16g.png",
      "32": "icons/logo/32g.png",
      "48": "icons/logo/48g.png",
      "128": "icons/logo/128g.png"
    }
  },
  "options_ui": { "page": "options.html", "open_in_tab": true },
  "web_accessible_resources": [
    {
      "resources": ["data/personas.json", "inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/shield/16.png",
    "32": "icons/shield/32.png",
    "48": "icons/shield/48.png",
    "128": "icons/shield/128.png"
  }
}
